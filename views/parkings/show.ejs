/* The Modal (background) */
.modal {
  display: none; /* Hidden by default */
  position: fixed; /* Stay in place */
  z-index: 1; /* Sit on top */
  left: 0;
  top: 0;
  width: 100%; /* Full width */
  height: 100%; /* Full height */
  overflow: auto; /* Enable scroll if needed */
  background-color: rgb(0,0,0); /* Fallback color */
  background-color: rgba(0,0,0,0.4); /* Black w/ opacity */
}

/* Modal Content/Box */
.modal-content {
  background-color: #fefefe;
  margin: 15% auto; /* 15% from the top and centered */
  padding: 20px;
  border: 1px solid #888;
  width: 80%; /* Could be more or less, depending on screen size */
}

/* The Close Button */
.close {
  color: #aaa;
  float: right;
  font-size: 28px;
  font-weight: bold;
}

.close:hover,
.close:focus {
  color: black;
  text-decoration: none;
  cursor: pointer;
}

</style>

<body id="dash">
    <nav class="navbar sticky-top shadow p-2 mb-2">
        <a class="navbar-brand" href="/owner/<%=id%>"><i class="fas fa-arrow-circle-left"></i></a>
        </nav>


        <% if(success_msg!=""){ %> 
          <div class="alert alert-success alert-dismissible fade show" role="alert">
            <%= success_msg%>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
      
      <% } %> 
      
      
      <% if(error_msg!=""){ %> 
      
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
              <%= error_msg%>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
      
      <% } %>



        <div class="row" style="height: 400px; margin-bottom: 60px;">
            <div class="col-4">
              <div class="card bg-light c1 shadow p-3 mb-5 bg-white rounded">
                <div class="card-header"><h2><%= parking.title %></h2></div>
                <div class="card-body">
                  <p class="card-text">
                    <h4>Description:&ensp; <%= parking.description %> </h4>
                    <br>
                    <h3 class="txt"><i class="fas fa-map-marker-alt"></i>: &ensp; <%= parking.location %> </h3> 
            <h3 class="txt"><i class="fas fa-motorcycle"></i>:&ensp; Price- ₹<%= parking.price2w %> &emsp; Slots- <%= parking.slot2w%> </h3>
              <h3 class="txt"><i class="fas fa-car-side"></i>:&ensp; Price- ₹<%= parking.price4w %> &emsp; Slots- <%= parking.slot4w%> </h3>
              <h3 class="txt" style="display:inline-block;margin-right: 50px;"><i class="far fa-star"></i>: &ensp; <%= parking.avgrating %></h3>
                  <a class="btn btn-lg  btn-block add e2" style="padding-top: 10px;display:inline-block; margin-left: 50px;" align="center" href="/owner/<%=id%>/<%=p_id%>/emergency">Emergency Booking</a>
                  </p>
                </div>
              </div>         
            </div>

            <!-- Reviews -->
            <div class="col-8" style="height: 100%;margin-right:0px">
              <div class="col" style="width:95%">
                <div class="card bg-light c1 shadow p-3 mb-5 bg-white rounded" style="width:100%; height: 422px;">
                  <div class="card-header"><h2>Review</h2>
                   
                  </div>
                <br>
                <br>
              <div class="table-responsive table-wrapper-scroll-y my-custom-scrollbar cd1" >
                <div id="dtBasicExample" class="table">
                   
                    <div style="background-color: #000;width:100%">
                      
                      <% for(var review of parking.reviews){ %>
                        
                          <div style="color: black; background-color: #C4C4C4; " >
                              <div style="border:none"> <%= review.author.name %></div>                          
                          </div>
                          <div  style="color: black; background-color: #C4C4C4; ">
                            <div style="border:none"><p class="starability-result" data-rating="<%=review.rating%>">
                              Rated: <%= review.rating %> stars
                          </p></div>
                          </div>
                          <div style="color: black; background-color: #C4C4C4; ">
                              <div style="border-top:none;border-bottom:10px solid white">
                                <p class="card-text ch" style="padding:5px; color:black">Review: <%= review.body %></p>
                                
                              </div>                              
                          </div>
                        
                <% } %>
                    
                        </div>
                      </div>
                  </div>
                </div>

              </div> 

          </div>

          </div> 
            <!-- History -->
            <div class="col-12" style="width:99%;padding-left:0px;">
              <div class="card bg-light c1 shadow p-3 mb-5 bg-white rounded" style="height: 400px;">
                <div class="card-header"><h2>Customer History</h2>
                  <form method="POST">
                    <input type="date" name="date" placeholder="Enter Date" required=true>
                    <button class="add e3" type="submit" formaction="/owner/<%=id%>/<%= p_id%>/sortByDate">Show</button>
                    <button class="add e3" type="submit" formaction="/owner/<%=id%>/<%=p_id%>/sales">Sales</button>
                  </form>
                </div>
              <br>
              <br>
              <div class="table-responsive table-wrapper-scroll-y my-custom-scrollbar cd1" >
                <table id="dtBasicExample" class="table table-striped table-sm " style="width: 98%;">
                    <thead style="text-align: center;">
                      <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Contact</th>
                        <th scope="col">Vehical No.</th>
                        <th scope="col">Arrival Time</th>
                        <th scope="col">Duration</th>
                        <th scope="col">Exit Action</th>
                      </tr>
                    </thead>
                    <tbody style="text-align: center;">
                      <% for(var booking of bookings){ %>
                          <tr>
                            <% if(booking.typee){ %>
                              <td class="wdfix"> <%= booking.name %></td>
                          <td class="wdfix"> <%=booking.email%></td>
                         <td class="wdfix"> <% if(booking.contact){ %>
                              <p><%=booking.contact%></p>
                          <% } else { %> 
                              <p>Not Provided</p>
                          <% } %>   </td>
                          <td class="wdfix"><%=booking.vehiclenumber%></td> 
                          <td class="wdfix"><%=booking.starttime%></td> 
                          <td class="wdfixt"><%=booking.duration%></td>
                          <td class="wdfix">
                          <form method="POST">
                            <input type="text" name="booking_id" value=<%=booking.id%> hidden>
                            <input type="number" name="checkotp" placeholder="Enter OTP">
                            <button class="add"  type="submit" formaction="/owner/<%=id%>/<%= p_id%>/OTP" >Send OTP</button>
                            <button class="add" type="submit" formaction="/owner/<%=id%>/<%= p_id%>/release">Confirm OTP</button>
                          </form>
                        </td>
                      <% } %> 
                  </tr>
                <% } %>
                    
                  </tbody>
                  </table>
                  </div>
</div>
               

            </div>
          
  </body>

